<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Logcat appender for Android -->
    <appender name="LOGCAT" class="ch.qos.logback.classic.android.LogcatAppender">
        <tagEncoder>
            <pattern>%logger{12}</pattern>
        </tagEncoder>
        <encoder>
            <pattern>[%-20thread] %msg</pattern>
        </encoder>
    </appender>

    <!-- File appender for persistent logging -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/data/data/com.xavlegbmaofff.todo/files/logs/todo.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>/data/data/com.xavlegbmaofff.todo/files/logs/todo.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logger for FileStorage -->
    <logger name="com.xavlegbmaofff.todo.FileStorage" level="DEBUG"/>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="LOGCAT"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>